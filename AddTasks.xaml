<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoListApp.AddTasks"
             Title="AddTasks">
  <StackLayout>
    <Entry x:Name="TaskNameEntry" 
            Placeholder="Ingresa tu tarea" 
            Text="{Binding NewTask.TaskName}" />
    <Entry x:Name="StatusEntry" 
            Placeholder="Ingrese el estado de la tarea" 
            Text="{Binding NewTask.Status}" />
    <Button x:Name="ConfirmarBtn" 
             Clicked="ConfirmarBtn_Clicked" 
             Text="Confirmar" />
  </StackLayout>

</ContentPage>
